<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<% @tasks.each do |task| %>
  <h2><%= task.title %></h2>
  <p><%= task.description %></p>
  <%= link_to 'click for details', task_path(task) %>
  <%= link_to 'click to edit', edit_task_path(task) %>
  <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<br>
 <%= link_to 'Add new task', new_task_path(@tasks) %>